{
  "name": "yenreach-backend",
  "version": "1.0",
  "description": "Backend for Yenreach",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "copyfiles -u 1 src/email/templates/*.handlebars dist/",
    "build:tsc": "tsc -p .",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "migrate:data": "ts-node data-migrations.ts",
    "migration:generate": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate ./src/migrations/InitialMigration -d ./src/core/database/index.ts",
    "migration:create": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create -d ./src/core/database/index.ts ./src/migrations/",
    "migration:run": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./src/core/database/index.ts",
    "migration:revert": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./src/core/database/index.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.0.0",
    "@sendgrid/mail": "^8.1.5",
    "axios": "^1.3.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cote": "^1.2.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "firebase-admin": "^13.2.0",
    "glob": "^11.0.1",
    "handlebars": "^4.7.7",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "nanoid": "^5.1.2",
    "nodemailer": "^6.9.13",
    "otp-generator": "^4.0.0",
    "pg": "^8.14.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.5.0",
    "tslib": "^2.8.1",
    "typeorm": "^0.3.20",
    "uuidv4": "^6.2.13",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^22.16.3",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^3.1.9",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "engineStrict": true
}
